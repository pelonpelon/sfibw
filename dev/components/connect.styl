.connect
  .content
    margin: 30px 0
    .row
      margin: 0 auto
    .icon
      color: transparent
      padding: 30px 10%
    .icon.email
      sprite($email)
    .icon.facebook
      sprite($facebook)
    .icon.twitter
      sprite($twitter)
    .icon.googleplus
      sprite($googleplus)
    .icon.instagram
      sprite($instagram)
    .icon.tumblr
      sprite($tumblr)
    .newsletter
      color: $text-special
      font-weight: 200
      margin-top: 50px
      input[type=submit]
        background-color: $theme-dark
        color: $text-special
        border-radius: 50px
        border: 2px solid $theme-light
