html
  background: $background
  background: url('./content/images/fur.png') repeat
  width: 100%
  height: 100%


body
  box-sizing: border-box

.container, .container-fluid
  padding: 0

.main
  display: flex
  flex-direction: column
  justify-content: center
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: url('./content/images/fur.png') repeat

// Common page styles

.page-title
  display: none
  font-size: 25px
  margin-top: 10px
  margin-bottom: 10px
  @media $laptop
    display: block

.page
  display: none
  flex 1
  width:  100%
  height: 100%
  opacity: 0;
  position: absolute
  top: 0
  left: 0
  .content
    color: $highlight
    width: 100%
    height: 100%
    max-width: 600px
    margin: 0 auto
    line-height: 0.8em
    .container, .container-fluid
      max-width: 600px
      margin-left: auto
      margin-right: auto

// Home Page
.home
  .content
    display: block
    width: 100%
    margin: 70px auto 0 auto
    padding: 0 3%
    @media $laptop
      margin: 120px auto 0 auto
      padding: 0
      max-width: 40%
    text-align: center
    background: transparent
    border: none

    .text-sf, .text-br, .text-hb, .text-yr, .intro
      opacity: 0
    .text-sf, .text-br
      color: $highlight
      line-height: 0.8
      HeadingSmallCaps(2em)
      @media $retina
        font-size: 2em
      @media $laptop
        font-size: 4.8em

    .text-hb, .text-yr
      font-size: 1.1em
      line-height: 1.6em
      color: $text-special
      font-weight: 400
      @media $laptop
        font-size: 1.2em

    .intro
      font-family: $text
      color: $highlight
      margin: 0 auto 0 auto
      @media $laptop
        margin: 10% auto
      padding: 0 4%
      font-size: 1.1em
      @media $laptop
        font-size: 1.4em
      line-height 150%
      text-align: left
      font-weight: 400
.footer
  @media $laptop
    display: none
  position: fixed
  bottom: 0
  width: 100%
  height: 40px
  z-index: 301
  background-color: transparent
  .btn,
  .btn:focus,
  .btn:hover,
  .btn:active
    float: right
    background: $text-special
    color: $theme-dark
    margin: 0 3px
    border-color: red


.dancing-bear
  @media $laptop
    display: none
    opacity: 0
    position: absolute
    bottom: 50px
    right: 50px
    width: 143px
    height: 218px
    background: url('./content/dancing-bear-polar.gif') no-repeat
    z-index: 102
    @require 'anim/zoomInUp'


