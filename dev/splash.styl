@require $bootstrap+"variables"
@require $bootstrap+"mixins/*"
@require $bootstrap+"normalize"
@require $bootstrap+"scaffolding"
@require $bootstrap+"utilities"
@require $bootstrap+"type"

@font-face
   font-family Laila
   font-style normal
   src url(http://fonts.gstatic.com/s/laila/v1/JBUIIJj0-G2GVTwQf-wy0qCWcynf_cDxXwCLxiixG1c.woff)

html
  background: $background

body
  box-sizing: border-box

.main
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: $background
  .text-hb
    display: none
  color: $highlight

.text-sf, .text-br, .text-hb, .text-yr, .intro
  opacity: 0


.content
  background: $background
  display: flex
  flex-flow: column nowrap
  height: 100%

// logo
.logo
  position: absolute
  top: 15%
  @media $laptop
    top: 40%
  width: 100%
  text-align: center
  background: transparent

  .text-sf, .text-br, .text-yr
    line-height: 1em
    font-size: 2em
    font-family: 'Laila', serif
    @media $retina
      font-size: 2em
    @media $laptop
      font-size: 3em

  .intro
    font-size: 16px
    font-size: 16px
    margin: 0 auto
    text-align: left
    margin: 20px
    font-weight: 200
    @media $laptop
      width: 40%
      margin: 50px auto

  .text-hb, .text-yr
    font-size: 1.2em
    color: $brand
    font-weight: 600

// Common page styles

.page-title
  display: none
  font-size: 25px
  margin-top: 10px
  margin-bottom: 10px
  @media $laptop
    display: block

.page
  opacity: 0;
  position: absolute
  top: 50px
  left: 0
  background: 'yellow'

