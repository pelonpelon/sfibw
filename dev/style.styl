@require $bower+"variables"
@require $bower+"mixins/*"
@require $bower+"normalize"
@require $bower+"scaffolding"
@require $bower+"utilities"
@require $bower+"type"

html
  background: $background

body
  box-sizing: border-box

.main
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: $background
  .text-hb
    display: none
  color: $highlight

.content
  background: $background
  display: flex
  flex-flow: column nowrap
  height: 100%
