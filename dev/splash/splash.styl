// _sprite.style will be imported if there are images in content/spritesrc

$bower = "../../bower_components/bootstrap-stylus/stylus/"
@import $bower+"variables"
@import $bower+"mixins/*"
@import $bower+"normalize"
@import $bower+"scaffolding"
@import $bower+"utilities"
@import $bower+"type"

$retina = 'only screen and (-webkit-min-device-pixel-ratio: 2), only screen and (min--moz-device-pixel-ratio: 2), only screen and (-o-min-device-pixel-ratio: 2/1), only screen and (min-device-pixel-ratio: 2), only screen and (min-resolution: 192dpi), only screen and (min-resolution: 2dppx)'
$laptop = 'only screen and (min-width: 992px)'

$color-highlight = 'purple'

html

body
  background: #000

.container-fluid
  height: 100%
  width: 100%

.splash, .main
  position: absolute
  top: 0
  left: 0
  height: 100%
  width: 100%
  text-align: center
  background-color: black

.splash
  z-index: -99
  .loading
    font-size: 16px
    line-height: 60px

.main
  color: purple
  opacity: 0
  .loading
    display: none

.header
  height: 6% !important

.menu
  height: 0

.content
  height: 100%

.splash .logo
  opacity: 0

.logo
  width: 100%
  height: 100%
  padding: 45% 0
  background-image: url('content/images/bear-jaws.png')
  background-size: 100% 100%
  background-repeat: no-repeat
  background-color: rgba(0,0,0,.9)
  @media $retina
    padding: 60% 0
    width: 100% !important
    height: 100% !important
    background-image: url('content/images/bear-jaws@2x.png')
    background-size: 100% 100%
  @media $laptop
    padding: 20% 0

.main .logo
  background-image: none

.logotext
  font-family: 'Laila', serif
  z-index: 99
  font-size: 200%
  margin: -10px auto
  @media $retina
    margin: -10px 0
    font-size: 200%
  @media $laptop
    margin: -20px auto
    font-size: 390%

.footer
  height: 40%

.fade1
   transition: opacity 1s ease-in
.fade2
   transition: opacity 2s ease-in
.fade5
   transition: opacity 0.5s ease-in
.opacity1
  opacity: 1
.opacity2
  opacity: 2
